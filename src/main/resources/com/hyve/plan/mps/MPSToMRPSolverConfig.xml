<?xml version="1.0" encoding="UTF-8"?>
<solver>

  <!--<environmentMode>FAST_ASSERT</environmentMode>-->
  <!-- Domain model configuration -->

  <solutionClass>com.hyve.plan.service.optaplanner.MPSReadinessCheckSolution</solutionClass>
  <planningEntityClass>com.hyve.plan.service.optaplanner.FulfilledPlanEntry</planningEntityClass>

  <!-- Score configuration -->

  <scoreDirectorFactory>
    <scoreDefinitionType>HARD_SOFT</scoreDefinitionType>
    <simpleScoreCalculatorClass>com.hyve.plan.service.optaplanner.HyveMPSReadinessScoreCalculator</simpleScoreCalculatorClass>
    <!--<scoreDrl>/org/optaplanner/examples/cloudbalancing/solver/cloudBalancingScoreRules.drl</scoreDrl>-->
  </scoreDirectorFactory>

  <!-- Optimization algorithms configuration -->

  <termination>
    <bestScoreLimit>0</bestScoreLimit>
  </termination>

  <constructionHeuristic>
    <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
  </constructionHeuristic>

  <localSearch>
    <acceptor>
      <entityTabuSize>7</entityTabuSize>
    </acceptor>
    <forager>
      <acceptedCountLimit>1000</acceptedCountLimit>
    </forager>
  </localSearch>

</solver>
